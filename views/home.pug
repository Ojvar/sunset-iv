extends ./layout/app.pug

block content
    section.hero.is-info.is-fullheight
        .hero-head
            header.navbar
                .container
                    .navbar-brand
                        a.navbar-item
                            img(src='https://bulma.io/images/bulma-type-white.png' alt='Logo')
                        span.navbar-burger.burger(data-target='navbarMenuHeroC')
                            span
                            span
                            span
                    #navbarMenuHeroC.navbar-menu
                        .navbar-end
                            a.navbar-item.is-active(href=Helper.route("home.index", { name }))
                                | Home

        .hero-body
            .container.has-text-centered
                h1 ;) Sunset-IV
                p
                    | Welcome to OjvarLand, #{ name }
                    br
                    | If you can view VisitCount value without any problem, congratulate ;) session module has been worked successfully
                    br
                    h3 VisitCount: #{ visitCount }

        .hero-foot
            nav.tabs
                .container
                    ul
                        li.is-active
                            a Overview
                        li
                            a Modifiers
